  "editor.tokenColorCustomizations": {
    "comments": "#6A9955",
    "keywords": "#f97c42",
    "functions": "#DCDCAA",
    "strings": "#CE9178",
    "variables": "#2eb8cd",
    "numbers": "#B5CEA8",
    "types": "#4EC9B0",
    "textMateRules": [
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "foreground": "#d76138"
        }
      },

      {
        "scope": "string.quoted.double, string.quoted.single",
        "settings": {
          "foreground": "#0ee499"
        }
      },

      {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#e56332"
        }
      },
      {
        "scope": "constant.language.boolean",
        "settings": {
          "foreground": "#569CD6"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "string.quoted.double",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "variable.parameter",
        "settings": {
          "foreground": "#9CDCFE"
        }
      },

      {
        "scope": "entity.name.tag",
        "settings": {
          "foreground": "#da6944"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "foreground": "#e8b022"
        }
      },
      {
        "scope": "string.quoted.double",
        "settings": {
          "foreground": "#3bece3"
        }
      }
    ]
  }

}
